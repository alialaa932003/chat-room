{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@ui/*": ["src/ui/*"],
            "@services/*": ["src/services/*"],
            "@features/*": ["src/features/*"],
            "@pages/*": ["src/pages/*"],
            "@context/*": ["src/context/*"],
            "@hooks/*": ["src/hooks/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
